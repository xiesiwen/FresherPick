/* pages/order/order.wxss */
.container{
  height: 100%;
  margin-top: -200rpx;
}
.orderList{
  width: 100%;
  padding: 15rpx;
  border: 150rpx 0;
  border-style: solid;
  border-color: #ECECEC;
  /* background: rgb(2, 247, 173); */
}
.order-title{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #ECECEC;
  display: flex;
  justify-content: space-between;
}
 .order-title-restaurantName{
  width: 400rpx;
  height: 100%;
  font-size: 30rpx;
}
.order-title-state{
  width: 130rpx;
  /* color: #D2D2D2; */
  color:  rgba(254,62,98, 0.8);
  margin-right: 20rpx;
  font-size: 28rpx;
}
.order-content{
  display: flex;
  flex-direction: column;
  align-items: left;
  border-bottom: 1rpx solid #ECECEC; 
}

.order-content-product{
  /* color: rgba(254,62,98, 0.8); */
  padding: 30rpx;
  position: relative;
  font-size: 26rpx;
  font-weight: 500;
  border: 1px solid #dfdfdf;
  border-left: 0rpx;
  border-radius: 5px;
  left:10rpx;
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: space-around;
}
.order-content-product-name, .order-content-product-numb, .order-content-product-price{
 width: 30%;
}

.order-content-other{
  display: flex;
  flex-direction: column;
  align-items: left;
  border-bottom: 1rpx solid #ECECEC; 
}
.order-content-other-address, .order-content-other-phone, .order-content-other-distributeId, .order-content-other-summary{
  padding: 10rpx;
  position: relative;
  font-size: 26rpx;
  font-weight: 500;
  border: 1px solid #dfdfdf;
  border-left: 0rpx;
  border-radius: 5px;
  left:10rpx;
  width: 100%;
  height: 50rpx;
  display: flex;
  /* justify-content: space-around; */
}
.order-content-other-name{
   width: 20%;
   text-align: left;
}
.order-content-other-value{
   width: 70%;
   display: flex;
   justify-content: flex-end;
}
