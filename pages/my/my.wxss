.order-footer{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
}
.order-footer-orderCancle, .order-footer-orderDelivery{
  margin-top: 15rpx;
  margin-right: 40rpx; 
  height: 70rpx;
  line-height: 70rpx;
  width: 200rpx;
  text-align: center;
  border: 1rpx solid #ECECEC;
  
  color: #D2D2D2;
}
.order-footer-orderDelivery{
   color: rgba(254,62,98, 0.8);
}
.order-footer-orderDeliveryInput{
  margin-top: 15rpx;
  margin-right: 40rpx; 
  height: 70rpx;
  line-height: 70rpx;
  width: 400rpx;
  text-align: left;
  border: 1rpx solid #ECECEC;
}
.order-footer-orderDelivery{
    background-color: white;
    color: rgba(254,62,98, 0.8);
    font-size: 26rpx;
}
.order-footer-goToComment,.order-footer-orderAgain{
  margin-top: 15rpx;
  margin-right: 40rpx; 
  height: 70rpx;
  line-height: 70rpx;
  width: 200rpx;
  text-align: center;
  border: 1rpx solid #ECECEC;
  color: #D2D2D2;
}
.order-footer-orderAgain{
  margin-right: 20rpx;
}
.order-footer-goToComment{
  background: #FFD161;
}